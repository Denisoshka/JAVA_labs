<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<SplitPane xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="javachat.client.view.ClientController"
           dividerPositions="0.3094736842105263" prefHeight="410.0" prefWidth="540.0">
    <VBox prefHeight="428.0" prefWidth="180.0" spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="50">
        <padding>
            <Insets bottom="1" left="1" right="1" top="1"/>
        </padding>
        <TextField fx:id="chatName" promptText="enter chat name"/>
        <PasswordField fx:id="chatPassword" promptText="enter chat password"/>
        <Button fx:id="login" maxWidth="Infinity" onAction="#loginChat" text="login"/>
        <Button fx:id="logout" maxWidth="Infinity" onAction="#logoutChat" text="logout"/>
    </VBox>
</SplitPane>