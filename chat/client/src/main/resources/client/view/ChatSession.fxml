<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="VBox"
         prefHeight="400.0" prefWidth="600.0">
    <ScrollPane fx:id="chatScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true"
                prefHeight="425.0" prefWidth="425.0" VBox.vgrow="ALWAYS">
        <GridPane fx:id="chatGridPane" style="-fx-background-color: WHITE;" vgap="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" percentWidth="25.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" percentWidth="50.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" percentWidth="25.0"/>
            </columnConstraints>
        </GridPane>
    </ScrollPane>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="messageTextField" HBox.hgrow="ALWAYS"/>
        <Button fx:id="selectFileButton" text="F#"/>
        <Button fx:id="sendMessageButton" text="=>"/>
    </HBox>
</fx:root>