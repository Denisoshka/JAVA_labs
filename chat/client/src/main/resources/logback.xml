<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="MODULE_FILE" class="ch.qos.logback.core.FileAppender">
        <file>client_info.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Логирование сообщений об ошибках в файл -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.FileAppender">
        <file>client_error.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="module_logger" level="DEBUG" additivity="false">
        <appender-ref ref="MODULE_FILE" />
    </logger>

</configuration>
