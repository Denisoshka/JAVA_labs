<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %msg%n</pattern>
            <!--            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg at %class.%method\(%file:%line\)%n</pattern>-->
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/${loggerName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/${loggerName}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{100} - %msg at %class.%method\(%file:%line\)%n
            </pattern>
            <!--            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{100} - %msg at %file:%line%n</pattern>-->
        </encoder>
        <fileAppend>false</fileAppend>
    </appender>
    <!--
        <root level="info">
            <appender-ref ref="STDOUT"/>
        </root>-->
    <logger name="ru.nsu.zhdanov.lab_4.facade.MainController" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="trace">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
