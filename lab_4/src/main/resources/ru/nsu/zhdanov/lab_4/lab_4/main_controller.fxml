<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>




<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.nsu.zhdanov.lab_4.facade.MainController"
            prefHeight="400.0" prefWidth="600.0">
    <SplitPane prefHeight="400" prefWidth="600" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox xmlns="http://javafx.com/javafx"
              xmlns:fx="http://javafx.com/fxml"
              prefHeight="400" prefWidth="350" AnchorPane.bottomAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
              fx:controller="LogWindowController">
            <HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="YourController">
                <VBox>
                    <Slider fx:id="frequencySlider" min="1" max="10" value="1" showTickMarks="true" showTickLabels="true"
                            majorTickUnit="1" minorTickCount="0" blockIncrement="1"/>
                    <Label fx:id="sliderValueLabel" text="Текущее значение слайдера: 1"/>
                </VBox>
                <Label fx:id="productCountLabel" text="Количество товаров: 0"/>
            </HBox>

        </VBox>
        <VBox xmlns="http://javafx.com/javafx"
              xmlns:fx="http://javafx.com/fxml"
              prefHeight="400" prefWidth="250" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"
              fx:controller="LogWindowController">

            <TextArea fx:id="logTextArea" editable="false"/>
        </VBox>
    </SplitPane>
</AnchorPane>
